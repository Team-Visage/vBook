
<% @posts.each do |post| %>
<div class="post">
  <div class="post_head">
  <img src="<%=User.find(post.user_id).image_url%>" height="5%" width="5%">
  <h3><%=  User.find(post.user_id).username%> :
      <%= post.created_at %>

      <%= post.post_likes %>
  </h3>
  </div>
  <div class="post_body">
  <p><%= post.message %></p>
  <div class="post_actions">
  <%= link_to '<button type="button">Like</button>'.html_safe, '/posts/like' %>
  </div>
</div>
<% end %>

<%= link_to new_post_path do %>
  New post
<% end %>
